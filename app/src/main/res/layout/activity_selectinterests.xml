        android:gravity="center"
        android:textSize="16dip"/>

    <TextView android:id="@+id/lectures"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Lectures"
        android:gravity="center"
        android:textSize="16dip"/>


    <TextView android:id="@+id/debates"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Debates"
        android:gravity="center"
        android:textSize="16dip"/>


    <TextView android:id="@+id/comedy"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Comedy"
        android:gravity="center"
        android:textSize="16dip"/>

    <TextView android:id="@+id/poetry"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Poetry"
        android:gravity="center"
        android:textSize="16dip"/>


    <TextView android:id="@+id/professional"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Professional"
        android:gravity="center"
        android:textSize="16dip"/>


    <TextView android:id="@+id/gaming"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Gaming"
        android:gravity="center"
        android:textSize="16dip"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:text="Submit"
        />
    </LinearLayout>

    </ScrollView>

</LinearLayout>