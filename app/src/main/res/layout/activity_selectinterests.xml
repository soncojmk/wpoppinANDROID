<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView android:id="@+id/music"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Music"
        android:gravity="center"
        android:textSize="16dip"/>

    <TextView android:id="@+id/dance"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Dance"
        android:gravity="center"
        android:textSize="16dip"/>

    <TextView android:id="@+id/performing_arts"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Performing Arts"
        android:gravity="center"
        android:textSize="16dip"/>

    <TextView android:id="@+id/films"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Films"
        android:gravity="center"
        android:textSize="16dip"/>


    <TextView android:id="@+id/sports"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Sports"
        android:gravity="center"
        android:textSize="16dip"/>

    <TextView android:id="@+id/art"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Art"
        android:gravity="center"
        android:textSize="16dip"/>

    <TextView android:id="@+id/philanthropy"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Philanthropy"
        android:gravity="center"
        android:textSize="16dip"/>

    <TextView android:id="@+id/politics"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
        android:text="Politics"
        android:gravity="center"
        android:textSize="16dip"/>

    <TextView android:id="@+id/health"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@color/background"
