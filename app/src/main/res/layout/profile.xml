<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="230dp">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/profileImage"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/profileImage"
        android:textSize="25sp"
        android:id="@+id/username"
        />

</RelativeLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/post"
    android:baselineAligned="false"
    android:paddingTop="16dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_add_circle_outline_black_24dp"
        />

    <TextView android:text="Post your event"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:id="@+id/invite"
        android:paddingTop="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@null"
            android:src="@drawable/ic_share_black_24dp"
            />

    <TextView android:text="Spread the fun! Invite your friends."
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:id="@+id/privacy"
        android:paddingTop="10dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_info_outline_black_24dp"
            />

    <TextView android:text="Terms and Privacy"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"/>

    <TextView android:text="Logout"
        android:id="@+id/btnLogout"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <Button android:id="@+id/music"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:tag="1"
                    android:layout_marginBottom="24dp"
                    android:background="@color/white"
                    android:text="Music"
                    android:gravity="center"
                    android:textSize="16dip"/>

                <Button android:id="@+id/dance"
                    android:layout_width="fill_parent"
                    android:tag="4"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/white"
                    android:text="Dance"
                    android:gravity="center"
                    android:textSize="16dip" />

                <Button android:id="@+id/performing_arts"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:tag="6"
                    android:layout_marginBottom="24dp"
                    android:background="@color/white"
                    android:text="Performing Arts"
                    android:gravity="center"
                    android:textSize="16dip" />

                <Button android:id="@+id/films"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:tag="12"
                    android:background="@color/white"
                    android:text="Films"
                    android:gravity="center"
                    android:textSize="16dip"/>


                <Button android:id="@+id/sports"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:tag="2"
                    android:background="@color/white"
                    android:text="Sports"
                    android:gravity="center"
                    android:textSize="16dip" />

                <Button android:id="@+id/art"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:tag="8"
                    android:layout_marginBottom="24dp"
                    android:background="@color/white"
                    android:text="Art"
                    android:gravity="center"
                    android:textSize="16dip" />

                <Button android:id="@+id/philanthropy"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:tag="3"
                    android:background="@color/white"
                    android:text="Philanthropy"
                    android:gravity="center"
                    android:textSize="16dip"/>

                <Button android:id="@+id/politics"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/white"
                    android:tag="21"
                    android:text="Politics"
                    android:gravity="center"
                    android:textSize="16dip" />

                <Button android:id="@+id/health"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/white"
                    android:tag="19"
                    android:text="Health/Wellbeing"
                    android:gravity="center"
                    android:textSize="16dip"/>

                <Button android:id="@+id/lectures"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:tag="17"
                    android:background="@color/white"
                    android:text="Lectures"
                    android:gravity="center"
                    android:textSize="16dip"/>


                <Button android:id="@+id/debates"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/white"
                    android:tag="18"
                    android:text="Debates"
                    android:gravity="center"
                    android:textSize="16dip"/>


                <Button android:id="@+id/comedy"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/white"
                    android:tag="13"
                    android:text="Comedy"
                    android:gravity="center"
                    android:textSize="16dip" />

                <Button android:id="@+id/poetry"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:tag="14"
                    android:background="@color/white"
                    android:text="Poetry"
                    android:gravity="center"
                    android:textSize="16dip" />


                <Button android:id="@+id/professional"
                    android:layout_width="fill_parent"
                    android:tag="11"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/white"
                    android:text="Professional"
                    android:gravity="center"
                    android:textSize="16dip" />


                <Button android:id="@+id/gaming"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:tag="20"
                    android:background="@color/white"
                    android:text="Gaming"
                    android:gravity="center"
                    android:textSize="16dip" />


            </LinearLayout>
        </HorizontalScrollView>



</LinearLayout>